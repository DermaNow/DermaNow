<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/officeswhitemodified"
    tools:context="com.example.ala.dermanow.secretary_signup">

    <EditText
        android:id="@+id/editText_secretary_name"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="179dp"
        android:drawableLeft="@drawable/ic_action_fullname"
        android:ems="10"
        android:fontFamily="serif"
        android:hint="Secretary name"
        android:inputType="textPersonName"
        android:textColor="@color/colorDarkBlue"
        android:textSize="18sp" />


    <EditText
        android:id="@+id/editText_secretary_username"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText_secretary_name"
        android:layout_below="@+id/editText_secretary_name"
        android:drawableLeft="@drawable/ic_action_name"
        android:ems="10"
        android:fontFamily="serif"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textColor="@color/colorDarkBlue"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText_secretary_password"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText_secretary_username"
        android:layout_below="@+id/editText_secretary_username"
        android:drawableLeft="@drawable/ic_action_pass"
        android:ems="10"
        android:fontFamily="serif"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/colorDarkBlue"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText_secretary_email"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText_secretary_password"
        android:layout_below="@+id/editText_secretary_password"
        android:drawableLeft="@drawable/ic_action_email"
        android:ems="10"
        android:fontFamily="serif"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="@color/colorDarkBlue"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText_secretary_phone"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText_secretary_email"
        android:layout_below="@+id/editText_secretary_email"
        android:drawableLeft="@drawable/ic_action_phone"
        android:ems="10"
        android:fontFamily="serif"
        android:hint="Phone"
        android:inputType="phone"
        android:textColor="@color/colorDarkBlue"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_secretary_signup"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/editText_secretary_phone"
        android:layout_marginBottom="17dp"
        android:fontFamily="serif"
        android:text="Create Secretary Account"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold" />


</RelativeLayout>
