<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ala.dermanow.skinDiagnosis">

    <ImageView
        android:id="@+id/captured_photo"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="75dp"
        android:contentDescription="desc" />

    <Button
        android:id="@+id/Takephoto_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp"
        android:layout_marginStart="10dp"
        android:fontFamily="serif"
        android:text="Take a photo"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/uploadPhoto_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Takephoto_button"
        android:layout_alignBottom="@+id/Takephoto_button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:fontFamily="serif"
        android:text="Upload photo"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/skinDiagnosis_progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/captured_photo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="107dp"
        android:progressDrawable="@drawable/circular_progress_bar" />
</RelativeLayout>
