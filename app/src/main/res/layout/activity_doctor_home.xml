<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drbackgroundmodifiedflip"
    tools:context="com.example.ala.dermanow.doctorHome">

    <ImageButton
        android:id="@+id/DoctorHome_profileButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/DoctorHome_view_secretary"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="13dp"
        android:background="@drawable/circle"
        android:backgroundTint="#e6f2ff"
        android:src="@drawable/ic_action_profile" />

    <TextView
        android:id="@+id/DoctorHome_profile_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/DoctorHome_profileButton"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:layout_toEndOf="@+id/DoctorHome_profileButton"
        android:fontFamily="serif"
        android:text="Profile"
        android:textAlignment="center"
        android:textColor="@color/colorDarkBlue"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/DoctorHome_view_secretary"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/DoctorHome_CamButton"
        android:layout_alignStart="@+id/DoctorHome_profileButton"
        android:layout_marginBottom="22dp"
        android:background="@drawable/circle"
        android:backgroundTint="#e6f2ff"
        android:src="@drawable/ic_action_assestant" />


    <TextView
        android:id="@+id/DoctorHome_view_secretary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/DoctorHome_view_secretary"
        android:layout_alignStart="@+id/DoctorHome_profile_text"
        android:layout_marginBottom="27dp"
        android:fontFamily="serif"
        android:text="My Secretary"
        android:textAlignment="center"
        android:textColor="@color/colorDarkBlue"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/DoctorHome_CamButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/DoctorHome_manageApp_button"
        android:layout_alignStart="@+id/DoctorHome_view_secretary"
        android:layout_marginBottom="16dp"
        android:background="@drawable/circle"
        android:backgroundTint="#e6f2ff"
        android:src="@drawable/ic_action_cam" />

    <TextView
        android:id="@+id/DoctorHome_skinDiagnosis_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/DoctorHome_CamButton"
        android:layout_alignStart="@+id/DoctorHome_view_secretary_text"
        android:layout_marginBottom="25dp"
        android:fontFamily="serif"
        android:text="Skin Diagnosis"
        android:textAlignment="center"
        android:textColor="@color/colorDarkBlue"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/DoctorHome_manageApp_button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/DoctorHome_CamButton"
        android:layout_marginBottom="24dp"
        android:background="@drawable/circle"
        android:backgroundTint="#e6f2ff"
        android:src="@drawable/ic_action_calender" />

    <TextView
        android:id="@+id/manage_app_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/DoctorHome_skinDiagnosis_text"
        android:layout_below="@+id/DoctorHome_CamButton"
        android:layout_marginTop="25dp"
        android:fontFamily="serif"
        android:text="Manage Appointment"
        android:textAlignment="center"
        android:textColor="@color/colorDarkBlue"
        android:textSize="22sp"
        android:textStyle="bold" />


</RelativeLayout>
