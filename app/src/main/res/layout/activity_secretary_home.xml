<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/secretarynursehome"
    tools:context="com.example.ala.dermanow.SecretaryHome">


    <ImageButton
        android:id="@+id/secretaryHome_profileButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="196dp"
        android:background="@drawable/circle"
        android:src="@drawable/ic_action_profile" />

    <ImageButton
        android:id="@+id/secretaryHome_manageApp_button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/secretaryHome_profileButton"
        android:layout_below="@+id/secretaryHome_profile_text"
        android:layout_marginTop="12dp"
        android:background="@drawable/circle"
        android:src="@drawable/ic_action_calender"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/secretaryHome_profile_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/secretaryHome_profileButton"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/secretaryHome_profileButton"
        android:fontFamily="serif"
        android:text="Profile"
        android:textAlignment="center"
        android:textColor="@color/colorDarkBlue"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/secretaryHome_manageApp_text"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/secretaryHome_profile_text"
        android:layout_alignTop="@+id/secretaryHome_manageApp_button"
        android:layout_marginTop="16dp"
        android:fontFamily="serif"
        android:text="Manage Appointments"
        android:textAlignment="textStart"
        android:textColor="@color/colorDarkBlue"
        android:textSize="22sp"
        android:textStyle="bold" />

</RelativeLayout>
