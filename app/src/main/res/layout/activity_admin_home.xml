<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/adminbackground"
    tools:context="com.example.ala.dermanow.admin_home">

    <ImageButton
        android:id="@+id/AdminHome_verifiedButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/logout_admin_button"
        android:layout_marginStart="30dp"
        android:layout_marginTop="62dp"
        android:background="@drawable/circle"
        android:src="@drawable/ic_action_verified" />

    <ImageButton
        android:id="@+id/AdminHome_unverifiedbutton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/AdminHome_verifiedButton"
        android:layout_below="@+id/AdminHome_verifiedButton"
        android:layout_marginTop="14dp"
        android:background="@drawable/circle"
        android:src="@drawable/ic_action_unverified"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/AdminHome_verified_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/AdminHome_unverifiedbutton"
        android:layout_alignStart="@+id/AdminHome_unverified_text"
        android:layout_marginBottom="25dp"
        android:fontFamily="serif"
        android:text="Verified Doctors"
        android:textAlignment="center"
        android:textColor="@color/colorDarkBlue"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/AdminHome_unverified_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/AdminHome_unverifiedbutton"
        android:layout_marginBottom="29dp"
        android:layout_marginStart="9dp"
        android:layout_toEndOf="@+id/AdminHome_unverifiedbutton"
        android:fontFamily="serif"
        android:text="Unverified Doctors"
        android:textAlignment="center"
        android:textColor="@color/colorDarkBlue"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/logout_admin_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="13dp"
        android:clickable="true"
        app:srcCompat="@android:drawable/ic_lock_power_off" />

</RelativeLayout>
