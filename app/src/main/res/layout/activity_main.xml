<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.ala.dermanow.MainActivity">

    <ImageView
        android:id="@+id/Main_logo"
        android:layout_width="270dp"
        android:layout_height="400dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/walaalogoapplication" />

    <Button
        android:id="@+id/main_skinDiagnosis_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Main_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="serif"
        android:text="Skin Diagnosis"
        android:textColor="@color/colorAccent"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/main_signin_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/main_skinDiagnosis_button"
        android:layout_alignStart="@+id/main_skinDiagnosis_button"
        android:layout_below="@+id/main_skinDiagnosis_button"
        android:layout_marginTop="20dp"
        android:fontFamily="serif"
        android:text="Sign in"
        android:textColor="@color/colorAccent"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/main_signup_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/main_signin_button"
        android:layout_alignStart="@+id/main_signin_button"
        android:layout_below="@+id/main_signin_button"
        android:layout_marginTop="20dp"
        android:fontFamily="serif"
        android:text="Sign up"
        android:textColor="@color/colorAccent"
        android:textSize="22sp"
        android:textStyle="bold" />

</RelativeLayout>
