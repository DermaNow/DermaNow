<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/halfpatient"
    tools:context="com.example.ala.dermanow.patientHome">

    <ImageButton
        android:id="@+id/patientHome_CamButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/patientHome_search_button"
        android:layout_below="@+id/patientHome_search_button"
        android:layout_marginTop="14dp"
        android:background="@drawable/circle"
        android:src="@drawable/ic_action_cam" />

    <TextView
        android:id="@+id/patientHome_skinDiagnosis_text"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/patientHome_CamButton"
        android:layout_alignStart="@+id/patientHome_search_text"
        android:layout_marginBottom="14dp"
        android:fontFamily="serif"
        android:text="Skin Diagnosis"
        android:textAlignment="textStart"
        android:textColor="@color/colorDarkBlue"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/patientHome_profileButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="99dp"
        android:background="@drawable/circle"
        android:src="@drawable/ic_action_profile" />

    <TextView
        android:id="@+id/patientHome_profile_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/patientHome_search_button"
        android:layout_marginBottom="27dp"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/patientHome_profileButton"
        android:fontFamily="serif"
        android:text="Profile"
        android:textAlignment="center"
        android:textColor="@color/colorDarkBlue"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/patientHome_reserve_appButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/patientHome_CamButton"
        android:layout_below="@+id/patientHome_CamButton"
        android:layout_marginTop="22dp"
        android:background="@drawable/circle"
        android:src="@drawable/ic_action_clinic" />

    <TextView
        android:id="@+id/patientHome_reserve_app_text"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/patientHome_reserve_appButton"
        android:layout_alignStart="@+id/patientHome_skinDiagnosis_text"
        android:layout_marginBottom="14dp"
        android:fontFamily="serif"
        android:text="Reserve Appointment"
        android:textAlignment="textStart"
        android:textColor="@color/colorDarkBlue"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/patientHome_search_button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/patientHome_profileButton"
        android:layout_below="@+id/patientHome_profileButton"
        android:layout_marginTop="14dp"
        android:background="@drawable/circle"
        android:src="@drawable/ic_action_search" />


    <TextView
        android:id="@+id/patientHome_search_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/patientHome_CamButton"
        android:layout_alignEnd="@+id/patientHome_profile_text"
        android:layout_marginBottom="28dp"
        android:fontFamily="serif"
        android:text="Search"
        android:textAlignment="center"
        android:textColor="@color/colorDarkBlue"
        android:textSize="22sp"
        android:textStyle="bold" />

</RelativeLayout>
