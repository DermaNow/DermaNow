<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drbackgroundmodified"
    tools:context="com.example.ala.dermanow.attachment">

    <EditText
        android:id="@+id/editText_clinicLicense"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="216dp"
        android:layout_toEndOf="@+id/btn_cancel"
        android:layout_weight="1"
        android:focusable="false"
        android:fontFamily="serif"
        android:hint="Clinic License"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_browse_clinicLicense"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/editText_clinicLicense"
        android:layout_toEndOf="@+id/editText_jobLicense"
        android:fontFamily="serif"
        android:text="Browse"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText_jobLicense"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText_clinicLicense"
        android:layout_below="@+id/editText_clinicLicense"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:focusable="false"
        android:fontFamily="serif"
        android:hint="Job  License"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_browse_jobLicense"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button_browse_clinicLicense"
        android:layout_alignTop="@+id/editText_jobLicense"
        android:fontFamily="serif"
        android:text="Browse"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@null"
        android:fontFamily="serif"
        android:text="@string/done"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@null"
        android:fontFamily="serif"
        android:text="@string/skip"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>
