<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ala.dermanow.Diagnosis_doctor">

    <TextView
        android:id="@+id/dorctorDiagnosis_diseaseName_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:fontFamily="serif"
        android:text="Name"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dorctorDiagnosis_diseaseDescreption_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/dorctorDiagnosis_diseaseSymptoms_text"
        android:layout_below="@+id/dorctorDiagnosis_diseaseName_text"
        android:layout_marginTop="12dp"
        android:fontFamily="serif"
        android:text="Description:"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dorctorDiagnosis_diseaseSymptoms_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/dorctorDiagnosis_diseaseMidication_text"
        android:layout_below="@+id/dorctorDiagnosis_diseaseDescreption_text"
        android:layout_marginTop="102dp"
        android:fontFamily="serif"
        android:text="Symptoms:"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dorctorDiagnosis_diseaseMidication_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dorctorDiagnosis_diseaseSymptoms_text"
        android:layout_marginStart="17dp"
        android:layout_marginTop="120dp"
        android:fontFamily="serif"
        android:text="Midication:"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="360dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:background="@drawable/red_border">

        <ImageView
            android:id="@+id/warning_icon2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/frameLayout2"
            android:layout_alignEnd="@+id/textView6"
            android:layout_alignStart="@+id/textView7"
            android:layout_alignTop="@+id/frameLayout2"
            android:layout_marginStart="12dp"
            app:srcCompat="@drawable/ic_action_warning" />

        <TextView
            android:id="@+id/dorctorDiagnosis_warning_text"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/frameLayout2"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/textView5"
            android:fontFamily="serif"
            android:text="Critical condition"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textSize="22sp"
            android:textStyle="bold|italic" />
    </FrameLayout>

    <TextView
        android:id="@+id/dr_descreption_fulltext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/dorctorDiagnosis_diseaseDescreption_text"
        android:layout_below="@+id/dorctorDiagnosis_diseaseDescreption_text"
        android:layout_marginTop="15dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/dr_symptoms_fulltext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/dorctorDiagnosis_diseaseSymptoms_text"
        android:layout_below="@+id/dorctorDiagnosis_diseaseSymptoms_text"
        android:layout_marginTop="18dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/dr_midication_fulltext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/dorctorDiagnosis_diseaseMidication_text"
        android:layout_below="@+id/dorctorDiagnosis_diseaseMidication_text"
        android:layout_marginTop="16dp"
        android:textSize="18sp" />

</RelativeLayout>
